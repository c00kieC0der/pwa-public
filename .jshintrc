{
    "node": true,
    // deprecated
    // iffe functions need to be wrapped in parenthesis
    "immed": true,

    // deprecated
    // editor config is set to 4 right now, but should be 2
    "indent": 2,

    // deprecated
    // suppresses warnings about using [] notation versus dot notation
    "sub": true,

    // deprecated
    // if true, doesn't enforce style, but forces consistency
    // set to single or double to force that style
     "quotmark": false,

    // force curly braces around blocks in loops and conditionals
    "curly": true,

    // suppress warnings about missing semicolons
    // ideally we dont want to suppress warnings
    // "asi": true,

    // supress warnings about usage of expressions where
    // you normally see assignments or function calls
    "expr": true,

    // suppress warnings about use of assignments where comparisons are expected
    "boss": true,

    // suppress warnings for usage of == null comparisons
    "eqnull": true,

    // lets jshint know that ECMAScript 6 syntax is being used
    "esnext": true,

    // prohibits usage of ^ and | (XOR and OR)
    "bitwise": false,
    "camelcase": false,

    // curl braces in loops and conditionals
    "curly": true,

    // triple equals
    "eqeqeq": true,
    "immed": true,
    "indent": 4,

    // prohibit use of variable before it was defined
    "latedef": false,

    // constructor function names need to be capitalized
    "newcap": true,

    // prohibit use of arguments.caller and arguments.callee
    "noarg": true,
    //"quotmark": "single",
    "regexp": true,

    // require all non-global variables to be declared
    "undef": false,
    "unused": false,
    "strict": true,

    // force all variables and last function param variables to be used
    // "unused": true,

    // strict should be false since we dont use use strict
    "strict": false,


    // no documentation found
    "regexp": true,

    // no documentation found
    "trailing": true,

    // no documentation found
    "smarttabs": true,

    /// no documentation found
    "white": true,


    // environments
    "browser": true,
    "jquery": true,
    "jasmine": true,

    // globals
    "globals": {

        // weather channel related
        "TWC": true,
        "twc": true,


        // third party
        "Modernizr": false,
        "jQuery": false,
        "angular": true,
        "Drupal": false
    }
}
